
<JanelaCollect>:
    GridLayout: # janela_collect
        id: janela_collect
        cols: 1
        spacing: 1, 1
        padding: 1, 1
        GridLayout: # area_superior
            cols:3
            rows:1
            size_hint: 1.0, 0.1
            id: area_superior
            Button:
                id: butt_sair
                size_hint: 0.2, 1.0
                text: '< Sair'
                on_release: root.voltar ()
                
            Label:
                text: 'Colecoes'
            Button:
                text: 'add'
                on_release: root.add()
                size_hint: 0.2, 1.0
        GridLayout:
            cols: 1
            layout_content: area_collects
            ScrollView
            # scroll_janela_collect
                id: scroll_janela_collect
                size: self.size
                GridLayout: 
                    cols: 1
                    spacing: 1, 1
                    padding: 1, 1
                    id: area_collects
                    orientation: 'vertical'
                    size_hint: 1.0, None
                    row_default_height: '40dp'
                    row_force_default: False
                
        GridLayout: # area_botoes
            id: area_botoes
            cols: 1
            size_hint: 1.0 , 0.3
            #Button:
                #id: butt_login
                #text: 'Voltar'
                #on_release: root.voltar ()


                
                
