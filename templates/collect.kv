<JanelaAddCollect>:
    GridLayout:
        id: janela_add_col
        cols: 1
        spacing: 1, 1
        padding: 1, 1
        Button:
            size_hint: 1.0, 0.2
            text: 'Voltar'
            on_release: root.voltar()
        GridLayout: # nada
            cols:1
        GridLayout:
            cols: 1
            size_hint: 1.0, 0.4
            Label:
                id: label_nome
                text: 'Nome da Colecao'
            TextInput:
                id: tx_nome
                text: ''
                multiline: False
                on_text_validate: root.salvar()
        GridLayout: #nada
            cols:1
        Button:
            size_hint: 1.0, 0.3
            text: 'salvar'
            on_release: root.salvar()
