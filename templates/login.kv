
<JanelaLogin>:
    GridLayout: # janela_login
        id: janela_login
        cols: 1
        rows: 5
        spacing: 1, 1
        padding: 1, 1
        GridLayout:
            cols: 1
            Label:
                id: tx_aviso
                text: ''
        GridLayout: # area_inputs
            cols:1
            rows:4
            #size_hint: 0.5, 0.5
            id: area_inputs
            Label:
                text: 'Senha'
            TextInput:
                id: tx_password
                password: True
                multiline: False
                text: ''
                #size_hint_y: 0.5
                height: '16sp'
                on_text_validate: root.do_unlock()
        GridLayout:
            cols: 1
        GridLayout: # area_botoes
            id: area_botoes
            cols: 1
            size_hint: 1.0 , 0.3
            Button:
                id: butt_login
                text: 'Unlock'
                on_release: root.do_unlock()


                
                
