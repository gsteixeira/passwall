
    
<JanelaPassList>:
    GridLayout: # janela_collect
        id: janela_collect
        cols: 1
        spacing: 1, 1
        padding: 1, 1
        GridLayout: # area_superior
            cols:3
            rows:1
            size_hint: 1.0, 0.1
            id: area_superior
            Label:
                id: nome_colecao
                text: 'Senhas'
                size_hint: 0.8, 1.0
            Button:
                text: 'add'
                on_release: root.add()
            Button:
                text: 'edit'
                on_release: root.edit_collect()
        GridLayout:
            cols: 1
            layout_content: area_pass
            ScrollView
            # scroll_janela_collect
                id: scroll_janela_collect
                size: self.size
                GridLayout: 
                    cols: 1
                    spacing: 1, 1
                    padding: 1, 1
                    id: area_pass
                    orientation: 'vertical'
                    size_hint: 1.0, None
                    row_default_height: '40dp'
                    row_force_default: False
                
        GridLayout: # area_botoes
            id: area_botoes
            cols: 1
            size_hint: 1.0 , 0.2
            Button:
                id: butt_login
                text: 'Voltar'
                on_release: root.voltar ()


<JanelaAddPass>:
    GridLayout:
        id: janela_add_pass
        cols: 1
        spacing: 1, 1
        padding: 1, 1
        Button:
            size_hint: 1.0, 0.2
            text: 'Voltar'
            on_release: root.voltar()
        GridLayout: # nada
            cols:1
        GridLayout:
            cols: 2
            #size_hint: 1.0, 0.3
            Label:
                id: label_desc
                text: 'descricao'
            TextInput:
                id: tx_desc
                multiline: False
                text: ''
                height: '16sp'
                on_text_validate: root.ids.tx_password.focus = True
            Label:
                id: label_senha
                text: 'senha'
            TextInput:
                id: tx_password
                password: True
                multiline: False
                text: ''
                height: '16sp'
                on_text_validate: root.salvar()
        GridLayout: # nada
            cols:1
        GridLayout:
            cols: 1
            size_hint: 1.0, 0.3
            Button:
                text: 'salvar'
                on_release: root.salvar()
            
    

<JanelaPassView>:
    GridLayout:
        id: janela_pass_view
        cols: 1
        spacing: 1, 1
        padding: 1, 1
        GridLayout:
            cols: 1
        Label:
            id: tx_desc
            size_hint: 1.0, 0.2
            text: 'descricao'
        Label:
            id: pass_field
            size_hint: 1.0, 0.2
            text: '****'
        GridLayout:
            cols: 4
            spacing: 1, 1
            padding: 1, 1
            size_hint: 1.0, 0.3
            Button:
                id: butt_show
                text: 'show'
                on_release: root.show()
            Button:
                id: butt_clip
                text: 'clip'
                on_release: root.clip()
            Button:
                id: butt_clip
                text: 'edit'
                on_release: root.edit ()
            Button:
                id: butt_clip
                text: 'del'
                on_release: root.delete()
        GridLayout:
            cols: 1
            
        GridLayout:
            cols: 1
            size_hint: 1.0, 0.3
            Button:
                id: butt_login
                text: 'Voltar'
                on_release: root.voltar ()
            
            
    
    
    
                
